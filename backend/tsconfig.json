{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "rootDir": "./",
    "lib": ["ES2020"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./"
  },
  "include": ["src/**/*", "server.ts", "prisma/seed.ts"],
  "exclude": ["node_modules"]
}
